<header role="banner">
  <h1>Progressive form</h1>
  <form action="/toggle-js" method="POST" id="toggle-form">
    <fieldset>
      <legend>Enable JavaScript?</legend>
      <input type="radio" name="js-enabled" value="0" id="toggle-off"  {{#unless jsEnabled}}checked{{/unless}}>
      <label for="toggle-off">No</label>
      <input type="radio" name="js-enabled" value="1" id="toggle-on" {{#if jsEnabled}}checked{{/if}}>
      <label for="toggle-on">Yes</label>
      
    </fieldset>
    <button type="submit">Submit</button>
  </form>
</header>
<main role="main">
  <section id="input">
    <form action="/print-name" method="POST" id="name-form">
      <fieldset>
        <legend>Enter your name</legend>
        <label for="name-field">Name: </label>
        <input type="text" name="name" placeholder="John, Jim" id="name-field" required>
      </fieldset>
      <button type="submit">Submit</button>
    </form>
  </section>
  <section id="output">
    {{!--if a name was submitted, show it--}}
    {{#if name}}
    <p>You submitted: {{{name}}}</p>
    {{/if}}
  </section>
</main>
{{!--if user requests our JS, write it here--}}
{{#if jsEnabled}}
<h3>Js is on!</h3>
<script src="//code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
<script src="/client.js"></script>
{{/if}}


